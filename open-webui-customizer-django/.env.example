# Django Settings
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=config.settings.development
DEBUG=True

# Database Configuration
DB_NAME=openwebui_customizer
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=sqlite:///dev.sqlite3

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Git Configuration
GIT_TIMEOUT=300
SSH_KEY_SIZE=2048
GIT_ALLOWED_HOSTS=github.com,gitlab.com,bitbucket.org
GIT_ALLOW_ANY_HOST=False

# Pipeline Configuration
BUILD_TIMEOUT=1800
MAX_CONCURRENT_BUILDS=3
WORKSPACE_DIR=/tmp/open_webui_builds
DEFAULT_RETENTION_DAYS=7

# Registry Configuration
REGISTRY_TIMEOUT=600
DOCKER_API_VERSION=auto
DOCKER_BASE_URL=unix://var/run/docker.sock

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@openwebui.example.com

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS Configuration (for S3 storage)
USE_S3=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-bucket.s3.amazonaws.com

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Pool Configuration
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Logging
LOG_LEVEL=INFO

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8080